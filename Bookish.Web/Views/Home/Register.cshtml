

<form id="login_form" class="form_class" action="Register2" method="post" style="background-color: lightgrey; border-radius: 10px; margin: 2rem; padding: 1rem;">
    
    <div class="form_div">
        <label>Login:</label>
        <input class="field_class" name="login_txt" type="text" placeholder="Username" autofocus required>
        <br/>
        <label>Password:</label>
        <input id="pass" class="field_class" name="password_txt" type="password" placeholder="Password" required>
        <br/>
        <label>Reenter password:</label>
        <input id="repass" class="field_class" name="repassword_txt" type="password" placeholder="Password" required>
        <br/>
        <button class="submit_class" type="submit" form="login_form" onclick="return validateLogin()">Register</button>
    </div>

</form>